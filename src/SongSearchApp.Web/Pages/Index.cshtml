@page
@model IndexModel
@{
    ViewData["Title"] = "Song Search";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-5 mb-3">Song Search</h1>
            <form method="get" class="d-flex gap-2">
                <input class="form-control" type="search" name="Query" value="@Model.Query" placeholder="Search songs or artists" />
                <input type="hidden" name="ViewMode" value="@Model.ViewMode" />
                <input type="hidden" name="Limit" value="@Model.Limit" />
                <input type="hidden" name="Offset" value="0" />
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
            <div class="mt-3">
                <div class="btn-group" role="group" aria-label="View mode">
                    <a class="btn btn-outline-secondary @(Model.ViewMode == "grid" ? "active" : "")" asp-page="./Index" asp-route-Query="@Model.Query" asp-route-ViewMode="grid" asp-route-Limit="@Model.Limit" asp-route-Offset="0">Grid</a>
                    <a class="btn btn-outline-secondary @(Model.ViewMode == "list" ? "active" : "")" asp-page="./Index" asp-route-Query="@Model.Query" asp-route-ViewMode="list" asp-route-Limit="@Model.Limit" asp-route-Offset="0">List</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4" id="results">
        <div class="col-lg-8">
            @if (!string.IsNullOrWhiteSpace(Model.Query))
            {
                if (Model.Results.Count == 0)
                {
                    <div class="alert alert-secondary" role="alert">
                        No results for "@Model.Query".
                    </div>
                }
                else
                {
                    if (Model.ViewMode == "grid")
                    {
                        <partial name="_SongResultsGrid" model="Model.Results" />
                    }
                    else
                    {
                        <partial name="_SongResultsList" model="Model.Results" />
                    }

                    if (Model.HasMore)
                    {
                        <div class="d-grid mt-3">
                            <a class="btn btn-outline-primary" data-load-more="true" data-scroll-restore="true" asp-page="./Index" asp-page-handler="More" asp-route-Query="@Model.Query" asp-route-ViewMode="@Model.ViewMode" asp-route-Limit="@Model.Limit" asp-route-Offset="@(Model.Offset + Model.Limit)">Load more</a>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>
