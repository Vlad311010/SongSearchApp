@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy & Data Use";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-5 mb-3">Privacy & Data Use</h1>
            <p class="text-muted">This app does not create accounts and does not store personal data.</p>

            <h2 class="h5 mt-4">Data Stored Locally</h2>
            <ul class="text-muted">
                <li>View mode (list or grid)</li>
                <li>Pagination settings and last search (if present in the URL)</li>
            </ul>

            <h2 class="h5 mt-4">External Requests</h2>
            <p class="text-muted">
                Searches are sent to the iTunes Search API. Preview links open on Apple-hosted domains.
            </p>

            <h2 class="h5 mt-4">Analytics</h2>
            <p class="text-muted">No analytics or tracking scripts are used.</p>

            <h2 class="h5 mt-4">Cookies</h2>
            <p class="text-muted">This app does not set cookies.</p>            
        </div>
    </div>
</div>
